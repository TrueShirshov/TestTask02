<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- Color for title text (and buttons, but they colored in code) -->
        <item name="android:textColor">@color/colorPrimaryDark</item>

        <!-- Color for text inside alert aka description -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="BlackText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="GreyText">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteText.Small">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="BlackText.Big">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackText.Huge">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="BlackText.Giant">
        <item name="android:textSize">40dp</item>
    </style>

</resources>
